                    new SelectListItem { Text = "Medicine", Value = "medicine" },
                    new SelectListItem { Text = "Taxes", Value = "taxes" },
                    new SelectListItem { Text = "Education", Value = "education" },
                    new SelectListItem { Text = "Clothes, shoes, accessories", Value = "clothes, shoes, accessories" },
                    new SelectListItem { Text = "Nutrition", Value = "nutrition" },
                    new SelectListItem { Text = "Banking service", Value = "banking service" },
                    new SelectListItem { Text = "Transport", Value = "transport" },
                    new SelectListItem { Text = "Work expenses", Value = "work expenses" },
                    new SelectListItem { Text = "Personal care", Value = "personal care" },
                    new SelectListItem { Text = "Other", Value = "other" }}, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateConsumption, "Date", htmlAttributes: new { @class = "control-label col-md-2" })
